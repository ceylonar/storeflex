rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check ownership
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // Secure all collections by default
    match /{document=**} {
      allow read, write: if false;
    }

    // Allow users to read and write their own data in these collections
    match /(products|sales|purchases|customers|suppliers|user_profiles|recent_activity|sales_returns|purchase_returns|expenses|salesOrders|purchaseOrders)/{docId} {
      allow read, write, delete: if isOwner(resource.data.userId);
      allow create: if isOwner(request.resource.data.userId);
    }
    
    // Allow any authenticated user to read from the counters
    match /counters/{counterId} {
      allow read, write: if request.auth != null;
    }
  }
}
