rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Default deny all access
    match /{document=**} {
      allow read, write: if false;
    }

    // Allow users to manage their own documents.
    // This applies to products, sales, customers, etc.
    match /{collection}/{docId} {
      allow read, update, delete: if request.auth != null && request.auth.uid == resource.data.userId;
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
    }
    
    // Allow any authenticated user to read and write to the counters.
    // This is needed for creating new documents with unique IDs.
    match /counters/{counterId} {
      allow read, write: if request.auth != null;
    }
    
     // Allow users to manage their own profile document
    match /user_profiles/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
