rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check ownership
    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    // Counters collection is readable/writable by any authenticated user to generate new IDs
    match /counters/{counterId} {
      allow read, write: if request.auth != null;
    }

    // All other collections can only be read if the query filters by the user's ID.
    // Individual documents can only be read/written/deleted by their owner.
    match /{collection}/{docId} {
      allow list: if request.auth != null && request.query.resource.data.userId == request.auth.uid;
      allow read, write, delete: if request.auth != null && isOwner(resource.data.userId);
    }
  }
}