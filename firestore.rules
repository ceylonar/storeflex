
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // WARNING: These rules are permissive and are not secure for production.
    // They are intended for initial development and debugging.
    // This allows any client to read and write to the entire database.
    match /{document=**} {
      allow read, write: if true;
    }
  }
}
