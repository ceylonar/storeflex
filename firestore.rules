
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow public read/write access to products for now.
    // TODO: Secure this for production by checking for authenticated users.
    match /products/{productId} {
      allow read, write: if true;
    }

    // Allow public read/write access to stores for now.
    // TODO: Secure this for production.
    match /stores/{storeId} {
      allow read, write: if true;
    }

    // Allow public read/write access to recent activity for now.
    // TODO: Secure this for production.
    match /recent_activity/{activityId} {
      allow read, write: if true;
    }
  }
}
